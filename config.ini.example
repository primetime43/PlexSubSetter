# PlexSubSetter Configuration File
# This file contains all application settings
# Settings can also be modified via the GUI: Settings button (âš™)

[General]
# Subtitle save method: 'plex' (upload to Plex) or 'file' (save next to video)
subtitle_save_method = plex

# Default language for subtitle searches (English, Spanish, French, etc.)
default_language = English

# Appearance theme: 'dark', 'light', or 'system'
appearance_mode = dark

# Remember the last selected library on startup
remember_last_library = True

# Last selected library (automatically saved)
last_library =

[Subtitles]
# Prefer hearing impaired (SDH) subtitles
prefer_hearing_impaired = False

# Prefer forced subtitles (only foreign language parts)
prefer_forced = False

# Default subtitle providers (comma-separated)
# Options: opensubtitles, podnapisi, tvsubtitles, addic7ed, subscene
default_providers = opensubtitles,podnapisi

# Search timeout in seconds (10-120)
search_timeout = 30

[UI]
# Show log panel on application startup
show_log_on_startup = False

# Default subtitle filter for movie libraries: 'all', 'missing', or 'has'
default_subtitle_filter = all

# Show confirmation dialog before batch operations
confirm_batch_operations = True

# Number of items that triggers batch operation warning
batch_operation_threshold = 10

[Advanced]
# Maximum number of concurrent subtitle downloads (1-10)
concurrent_downloads = 3

# Enable debug logging (creates larger log files)
enable_debug_logging = False
